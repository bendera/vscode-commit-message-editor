{
  "name": "lit-element-starter-ts",
  "version": "0.0.0",
  "description": "A simple web component",
  "main": "my-element.js",
  "module": "my-element.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:bundle",
    "build:ts": "tsc",
    "build:watch": "tsc --watch",
    "build:bundle": "npm run build:ts && rollup -c --file dist/bundled.js",
    "clean": "rimraf dist",
    "lint:eslint": "eslint src/**/*.ts",
    "format": "prettier src/* --write",
    "serve": "es-dev-server --config es-dev-server.config.cjs --node-resolve --watch --app-index dev/index.html --open",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\" --names \"tsc,server\"",
    "test": "npm run build:ts && karma start karma.conf.cjs --coverage",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
    "checksize": "npm run build:bundle && cat dist/bundled.js | gzip -9 | wc -c"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.1.11-alpha.7",
    "@reduxjs/toolkit": "^1.5.0",
    "@types/vscode": "^1.38.0",
    "lit-element": "^2.4.0",
    "pwa-helpers": "^0.9.1",
    "reselect": "^4.0.0",
    "vscode-codicons": "0.0.13"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "es-dev-server": "^1.57.8",
    "eslint": "^7.13.0",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^2.0.1",
    "lit-analyzer": "^1.2.1",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.0.5"
  }
}
