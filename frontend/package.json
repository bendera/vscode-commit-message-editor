{
  "name": "lit-element-starter-ts",
  "version": "0.0.0",
  "description": "A simple web component",
  "main": "my-element.js",
  "module": "my-element.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:bundle",
    "build:ts": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc --watch",
    "build:bundle": "npm run build:ts && rollup -c",
    "clean": "rimraf dist",
    "lint:eslint": "eslint src/**/*.ts",
    "format": "prettier src/* --write",
    "serve": "wds --watch",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\" --names \"tsc,server\"",
    "test": "npm run build:ts && wtr --coverage",
    "test:watch": "wtr --watch",
    "checksize": "npm run build:bundle && cat dist/bundled.js | gzip -9 | wc -c"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.7.0",
    "@reduxjs/toolkit": "^1.8.4",
    "@types/vscode": "^1.70.0",
    "lit": "^2.3.0",
    "pwa-helpers": "^0.9.1",
    "ts-debounce": "^4.0.0",
    "vscode-codicons": "0.0.17"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/testing": "^3.1.6",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-esbuild": "^0.3.2",
    "@web/dev-server-legacy": "^1.0.1",
    "@web/dev-server-rollup": "^0.3.19",
    "@web/test-runner": "^0.14.0",
    "@web/test-runner-mocha": "^0.7.5",
    "@web/test-runner-playwright": "^0.8.10",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "lit-analyzer": "^1.2.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "typescript": "^4.7.4"
  }
}
