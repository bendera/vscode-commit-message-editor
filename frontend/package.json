{
  "name": "lit-element-starter-ts",
  "version": "0.0.0",
  "description": "A simple web component",
  "main": "my-element.js",
  "module": "my-element.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:bundle",
    "build:ts": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc --watch",
    "build:bundle": "npm run build:ts && rollup -c --file dist/bundled.js",
    "clean": "rimraf dist",
    "lint:eslint": "eslint src/**/*.ts",
    "format": "prettier src/* --write",
    "serve": "es-dev-server --config es-dev-server.config.cjs --node-resolve --watch --app-index dev/index.html --open",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\" --names \"tsc,server\"",
    "test": "web-test-runner --node-resolve --coverage",
    "test:watch": "web-test-runner --node-resolve --watch",
    "checksize": "npm run build:bundle && cat dist/bundled.js | gzip -9 | wc -c"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.3.0-alpha.11",
    "@reduxjs/toolkit": "^1.5.0",
    "@types/vscode": "^1.38.0",
    "lit-element": "^2.4.0",
    "pwa-helpers": "^0.9.1",
    "vscode-codicons": "0.0.14"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.0",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@web/test-runner": "^0.12.13",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "es-dev-server": "^2.1.0",
    "eslint": "^7.18.0",
    "lit-analyzer": "^1.2.1",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.0",
    "rollup-plugin-filesize": "^9.1.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-minify-html-literals": "^1.2.5",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^4.2.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "typescript": "^4.1.3"
  }
}
