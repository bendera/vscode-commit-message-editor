{
  "name": "commit-message-editor",
  "displayName": "Commit Message Editor",
  "description": "Edit commit messages in a convenient way.",
  "version": "0.10.0",
  "preview": true,
  "publisher": "adam-bender",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "vcs"
  ],
  "icon": "icon.png",
  "repository": {
    "url": "https://github.com/bendera/vscode-commit-message-editor"
  },
  "activationEvents": [
    "onCommand:commitMessageEditor.openEditor",
    "onCommand:commitMessageEditor.copyFromSCMInputBox",
    "onWebviewPanel:copyFromExtensionMessageBox"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitMessageEditor.openEditor",
        "title": "Open the commit message editor",
        "category": "Git",
        "icon": {
          "light": "assets/images/icons/light/edit.svg",
          "dark": "assets/images/icons/dark/edit.svg"
        }
      },
      {
        "command": "commitMessageEditor.copyFromSCMInputBox",
        "title": "Copy text from SCM input box",
        "category": "Git"
      },
      {
        "command": "commitMessageEditor.loadTemplate",
        "title": "Load template",
        "category": "Git"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitMessageEditor.openEditor",
          "group": "navigation@1",
          "title": "Edit",
          "when": "scmProvider == git"
        },
        {
          "command": "commitMessageEditor.openEditor",
          "group": "inline",
          "title": "Edit",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "Commit Message Editor",
      "properties": {
        "commit-message-editor.template": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "{type}{scope}: {description}",
            "",
            "{body}",
            "",
            "{breaking_change}{footer}"
          ]
        },
        "commit-message-editor.tokens": {
          "type": "array",
          "description": "Editable inputs in the form view",
          "default": [
            {
              "label": "Type",
              "name": "type",
              "type": "enum",
              "options": [
                {
                  "label": "---",
                  "value": ""
                },
                {
                  "label": "build",
                  "description": "Changes that affect the build system or external dependencies (example scopes: gulp, broccoli, npm)"
                },
                {
                  "label": "ci",
                  "description": "Changes to our CI configuration files and scripts (example scopes: Travis, Circle, BrowserStack, SauceLabs)"
                },
                {
                  "label": "docs",
                  "description": "Documentation only changes"
                },
                {
                  "label": "feat",
                  "description": "A new feature"
                },
                {
                  "label": "fix",
                  "description": "A bug fix"
                },
                {
                  "label": "perf",
                  "description": "A code change that improves performance"
                },
                {
                  "label": "refactor",
                  "description": "A code change that neither fixes a bug nor adds a feature"
                },
                {
                  "label": "style",
                  "description": "Changes that do not affect the meaning of the code (white-space, formatting, missing semi-colons, etc)"
                },
                {
                  "label": "test",
                  "description": "Adding missing tests or correcting existing tests"
                }
              ],
              "description": "Type of changes"
            },
            {
              "label": "Scope",
              "name": "scope",
              "description": "A scope may be provided to a commitâ€™s type, to provide additional contextual information and is contained within parenthesis, e.g., <code>feat(parser): add ability to parse arrays</code>.",
              "type": "text",
              "multiline": false,
              "prefix": "(",
              "suffix": ")"
            },
            {
              "label": "Short description",
              "name": "description",
              "description": "Short description in the subject line.",
              "type": "text",
              "multiline": false
            },
            {
              "label": "Body",
              "name": "body",
              "description": "Optional body",
              "type": "text",
              "multiline": true
            },
            {
              "label": "Breaking change",
              "name": "breaking_change",
              "type": "boolean",
              "value": "BREAKING CHANGE: ",
              "default": false
            },
            {
              "label": "Footer",
              "name": "footer",
              "descripton": "Optional footer",
              "type": "text",
              "multiline": true
            }
          ]
        },
        "commit-message-editor.defaultView": {
          "type": "string",
          "default": "text",
          "enum": [
            "text",
            "form"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.1.7"
  }
}
