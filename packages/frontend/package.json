{
  "name": "commit-message-editor-frontend",
  "version": "0.19.0",
  "description": "A simple web component",
  "main": "my-element.js",
  "module": "my-element.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:bundle",
    "build:ts": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc --watch",
    "build:bundle": "npm run build:ts && rollup -c",
    "clean": "rimraf dist",
    "lint:eslint": "eslint src/**/*.ts",
    "format": "prettier src/* --write",
    "serve": "wds --watch",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\" --names \"tsc,server\"",
    "test": "npm run build:ts && wtr --coverage",
    "test:watch": "wtr --watch",
    "checksize": "npm run build:bundle && cat dist/bundled.js | gzip -9 | wc -c"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.7.0-pre.5",
    "@reduxjs/toolkit": "^1.6.1",
    "@types/vscode": "^1.59.0",
    "commit-message-editor-schemas": "^1.0.0",
    "lit": "^2.0.0-rc.3",
    "pwa-helpers": "^0.9.1",
    "ts-debounce": "^3.0.0",
    "vscode-codicons": "0.0.17"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/testing": "^2.5.33",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@web/dev-server": "^0.1.22",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/dev-server-legacy": "^0.1.7",
    "@web/dev-server-rollup": "^0.3.9",
    "@web/test-runner": "^0.13.16",
    "@web/test-runner-mocha": "^0.7.4",
    "@web/test-runner-playwright": "^0.8.8",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "lit-analyzer": "^1.2.1",
    "mocha": "^9.1.1",
    "prettier": "^2.3.2",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "typescript": "^4.4.2"
  }
}
